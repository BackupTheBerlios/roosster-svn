<dialog name="aboutDialog" text="i18n.AboutRoosster" modal="true"  columns="1"
        gap="10" left="5" right="5" top="10" bottom="10" closable="true">
        
  <label name="syndeliciousLabel" text="i18n.AboutRoossterDetail" />
  <button name="urlButton" 
          type="link" 
          halign="left"
          property="url=http://roosster.org/dev" 
          action="goUrl(this)" 
          text="http://roosster.org/dev"/>
  <button name="bookmarkletsButton" 
          type="link" 
          halign="left"
          property="url=http://roosster.org/dev/documentation/bookmarklets.html"
          action="goUrl(this)" 
          text="View Bookmarklets"/>
          
  <button text="i18n.Close" action="closeDialog(aboutDialog)" halign="center"/>
</dialog>
