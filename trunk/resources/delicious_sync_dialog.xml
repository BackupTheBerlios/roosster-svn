<dialog name="syndeliciousDialog" text="Sync with del.icio.us" modal="true" columns="2" 
        gap="10" left="5" right="5" top="10" bottom="10">
  <label name="syndeliciousLabel" text="Enter your username and password for del.icio.us:" colspan="2"/>
  
  <label text="Username"/>
  <textfield name="syndelicioususerField" />
  <label text="Password"/>
  <passwordfield name="syndeliciouspassField" />
  
  <button text="Cancel" action="closeDialog(syndeliciousDialog)" weightx="1"/>
  <button text="OK" action="remoteSync('syndelicious', syndelicioususerField.text, syndeliciouspassField.text)" weightx="1"/>
</dialog>
