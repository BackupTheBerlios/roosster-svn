<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- generated by ThinG, the Thinlet GUI editor -->
<panel columns="1" weightx="1" weighty="1">
    <menubar>
        <menu text="File" mnemonic="0">
            <!-- <menuitem text="Open ..." accelerator="Ctrl O" mnemonic="0" action="openIndex()"/> -->
        </menu>
        <menu text="Sync">
            <menuitem text="Sync del.icio.us ..." accelerator="Ctrl D" mnemonic="5" action="openDialog('delicious_sync_dialog')"/>
        </menu>
        <menu text="Help"/>
    </menubar>
    <panel gap="4" top="4" left="4" bottom="4" right="4">
        <label font="bold" foreground="#00df00" name="infomessagesLabel" text=" "/>
        <label font="bold" foreground="#df0000" name="errormessagesLabel"/>
    </panel>
    <panel scrollable="true" weightx="1" weighty="1" gap="4" top="4" left="4" bottom="4" right="4">
        <tabbedpane action="eventTabChanged(tabbedPane)" name="tabbedPane" weightx="1" weighty="1">
            <tab mnemonic="0" name="searchTab" text="Search">
                <panel colspan="0" columns="4" gap="4" weightx="1" weighty="1">
                    <label font="14 bold" text="Search"/>
                    <separator colspan="4" weightx="1"/>
                    <label for="queryField" text="Search"/>
                    <textfield colspan="2" columns="50" name="queryField" perform="doSearch(this.text, searchresultTable, pagersizeBox.text, '')" weightx="1"/>
                    <button action="doSearch(queryField.text, searchresultTable, pagersizeBox.text, '')" text="Go"/>
                    <label name="pagerLabel" colspan="2"/>
                    <panel colspan="2" halign="right">
                      <button text="&lt;-" name="pagerbackButton" action="doSearch(queryField.text, searchresultTable, pagersizeBox.text, pagerbackButton.name)" enabled="false"/>
                      <combobox editable="false" name="pagersizeBox" action="determinePagerEnabled()" selected="0">
                          <choice text="5"/>
                          <choice text="10"/>
                          <choice text="20"/>
                          <choice text="50"/>
                      </combobox>
                      <button text="-&gt;" name="pagerforwardButton" action="doSearch(queryField.text, searchresultTable, pagersizeBox.text, pagerforwardButton.name)" enabled="false" />
                    </panel>
                    <table colspan="4" name="searchresultTable" perform="fillEditForm(item)" visible="false" weightx="1" weighty="1">
                        <header>
                            <column name="titleHeader" text="Title" width="150"/>
                            <column name="tagsHeader" text="Tags" width="200"/>
                            <column name="noteHeader" text="Note" width="200"/>
                        </header>
                    </table>
                    <label colspan="4" name="emptyresultLabel" text="No Entries found for this search." visible="false"/>
                </panel>
            </tab>
            <tab mnemonic="0" name="editTab" text="Edit" enabled="false">
                <panel weightx="1" weighty="1">
                    <panel columns="2" gap="4" weightx="1" weighty="1">
                        <label font="14 bold" text="Edit an Entry"/>
                        <separator colspan="2"/>
                        <label text="URL"/>
                        <button name="urlButton" type="link" halign="left"/>
                        <label text="Tags"/>
                        <label name="tagsLabel"/>
                        <label for="titleField" text="Title"/>
                        <textfield name="titleField"/>
                        <label for="noteField" mnemonic="0" text="Note" valign="top"/>
                        <textarea columns="30" name="noteField" rows="4"/>
                        <separator colspan="2"/>
                        <label for="typeField" text="Type"/>
                        <textfield name="typeField"/>
                        <label for="authorField" text="Author"/>
                        <textfield name="authorField"/>
                        <label for="authoremailField" text="Author-Email"/>
                        <textfield name="authoremailField"/>
                        <label/>
                        <button action="doSave(titleField.text, noteField.text, typeField.text, authorField.text, authoremailField.text, tagsList)" halign="right" text="Save"/>
                    </panel>
                    <panel columns="2" weightx="1">
                        <label colspan="2" for="tagsField" mnemonic="1" text="Tags" weightx="1"/>
                        <textfield colspan="2" insert="suggestTag(this)" name="tagsField" perform="markTag(this)"/>
                        <label colspan="2" halign="left" text="Tags"/>
                        <list colspan="2" name="tagsList" selection="multiple" weighty="1"/>
                    </panel>
                </panel>
            </tab>
            <tab mnemonic="0" name="addTab" text="Add">
                <panel columns="3" gap="4">
                    <label colspan="2" font="14 bold" text="Add an Entry"/>
                    <separator colspan="3"/>
                    <label text="URL"/>
                    <textfield columns="50" name="addurlField" perform="doAdd(addurlField.text, addfetchcontentCheckbox.selected, addpublicCheckbox.selected, addforceCheckbox.selected)"/>
                    <button action="doAdd(addurlField.text, addfetchcontentCheckbox.selected, addpublicCheckbox.selected, addforceCheckbox.selected)" text="Add URL"/>
                    <togglebutton action="toggleVisible(advancedaddPanel)" colspan="2" halign="left" text="Show Advanced Options"/>
                    <panel colspan="3" columns="2" name="advancedaddPanel" visible="false">
                        <checkbox name="addfetchcontentCheckbox" selected="true"/>
                        <label text="Fetch Content?"/>
                        <checkbox name="addpublicCheckbox"/>
                        <label text="Public ?"/>
                        <checkbox name="addforceCheckbox"/>
                        <label text="Force Add ?"/>
                    </panel>
                </panel>
            </tab>
            <tab mnemonic="0" name="tagsTab" text="Tags">
                <panel columns="2" gap="4" weighty="1">
                    <label font="14 bold" text="Tags"/>
                    <separator colspan="2" weightx="1"/>
                    <list/>
                    <label/>
                </panel>
            </tab>
        </tabbedpane>
    </panel>
</panel>
