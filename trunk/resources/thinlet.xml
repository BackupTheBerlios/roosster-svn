<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- generated by ThinG, the Thinlet GUI editor -->
<panel columns="1" weightx="1" weighty="1">
    <panel>
        <label font="bold" foreground="#00df00" name="infomessagesLabel" text=" "/>
        <label font="bold" foreground="#df0000" name="errormessagesLabel"/>
    </panel>
    <tabbedpane action="eventTabChanged(tabbedPane)" name="tabbedPane" weightx="1" weighty="1">
        <tab mnemonic="0" name="searchTab" text="Search">
            <panel colspan="0" columns="3" gap="4" weightx="1" weighty="1">
                <label font="14 bold" text="Search"/>
                <separator colspan="3" weightx="1"/>
                <textfield columns="50" name="queryField" perform="doSearch(this.text, searchresultTable)"/>
                <button action="doSearch(queryField.text, searchresultTable)" text="Go"/>
                <label text=" "/>
                <table colspan="3" name="searchresultTable" perform="fillEditForm(item)" visible="false" weightx="1" weighty="1">
                    <header>
                        <column name="titleHeader" text="Title" width="150"/>
                        <column name="tagsHeader" text="Tags" width="200"/>
                        <column name="noteHeader" text="Note" width="200"/>
                    </header>
                </table>
                <label name="emptyresultLabel" text="No Entries found for this search." visible="false"/>
            </panel>
        </tab>
        <tab mnemonic="0" name="editTab" text="Edit">
            <panel weightx="1" weighty="1">
                <panel columns="2" gap="4" weightx="1" weighty="1">
                    <label font="14 bold" text="Edit an Entry"/>
                    <separator colspan="2"/>
                    <label text="URL"/>
                    <label name="urlLabel"/>
                    <label for="titleField" text="Title"/>
                    <textfield name="titleField"/>
                    <label for="tagsField" mnemonic="1" text="Tags"/>
                    <textfield name="tagsField"/>
                    <label for="noteField" mnemonic="0" text="Note" valign="top"/>
                    <textarea columns="30" name="noteField" rows="4"/>
                    <separator colspan="2"/>
                    <label for="typeField" text="Type"/>
                    <textfield name="typeField"/>
                    <label for="authorField" text="Author"/>
                    <textfield name="authorField"/>
                    <label for="authoremailField" text="Author-Email"/>
                    <textfield name="authoremailField" perform="doSave(titleField.text, tagsField.text, noteField.text, typeField.text, authorField.text, authoremailField.text, tagsList)"/>
                    <label/>
                    <button action="doSave(titleField.text, tagsField.text, noteField.text, typeField.text, authorField.text, authoremailField.text, tagsList)" halign="right" text="Save"/>
                </panel>
                <panel columns="1" weightx="1">
                    <label halign="left" text="Tags"/>
                    <list name="tagsList" selection="multiple"/>
                </panel>
            </panel>
        </tab>
        <tab mnemonic="0" name="addTab" text="Add">
            <panel columns="3" gap="4">
                <label colspan="2" font="14 bold" text="Add an Entry"/>
                <separator colspan="3"/>
                <label text="URL"/>
                <textfield columns="50" name="addurlField" perform="doAdd(addurlField.text, addfetchcontentCheckbox.selected, addpublicCheckbox.selected)"/>
                <button action="doAdd(addurlField.text, addfetchcontentCheckbox.selected, addpublicCheckbox.selected)" text="Add URL"/>
                <togglebutton action="toggleVisible(advancedaddPanel)" colspan="2" halign="left" text="Advanced Options"/>
                <panel colspan="3" columns="2" name="advancedaddPanel" visible="false">
                    <checkbox name="addfetchcontentCheckbox" selected="true"/>
                    <label text="Fetch Content?"/>
                    <checkbox name="addpublicCheckbox"/>
                    <label text="Public ?"/>
                </panel>
            </panel>
        </tab>
        <tab mnemonic="0" name="tagsTab" text="Tags">
            <panel columns="2" gap="4" weighty="1">
                <label font="14 bold" text="Tags"/>
                <separator colspan="2" weightx="1"/>
                <list/>
                <label/>
            </panel>
        </tab>
    </tabbedpane>
</panel>
